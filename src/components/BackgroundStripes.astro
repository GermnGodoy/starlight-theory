---
export interface Props {
  class?: string;
  size?: number;
}

const { class: className, size = 8 } = Astro.props;

// Generate a unique ID for this pattern instance
const patternId = `stripe-pattern-${Math.random().toString(36).substr(2, 9)}`;
---

<div class:list={["absolute inset-0 text-gray6", className]}>
  <svg width="100%" height="100%">
    <defs>
      <pattern
        id={patternId}
        viewBox="0 0 10 10"
        width={size}
        height={size}
        patternUnits="userSpaceOnUse"
      >
        <line
          x1="0"
          y1="10"
          x2="10"
          y2="0"
          stroke="currentColor"
          vector-effect="non-scaling-stroke"
        />
      </pattern>
    </defs>
    <rect width="100%" height="100%" fill={`url(#${patternId})`} />
  </svg>
</div>